<div class='thread-view'>
    <div class='thread-head'>
        <h2><p>{{thread.thread_name}}</p></h2>
        <p>{{thread.body}}</p>
    </div>
    <div class='comment-section'>
        {{#each comments as |comment|}}
        <div class='comment'>
            <h4>{{user.user_name}}</h4>
            <p>{{comment.body}}</p>
        </div>
        {{/each}}
      <form class='comment-creation'>
         <textarea type="text" class="textarea is-large" id="comment-content" name="comment-content" placeholder="comment content here"></textarea>   
        <button id="btn"  class="createbtn">Create comment</button>
        <div id="msg">
          <pre></pre>
        </div>
      </form>  
    </div>
         <script src="/js/createcomment.js" async defer></script>

</div>