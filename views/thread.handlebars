<div class='thread-view'>
    <div class='thread-head'>
        <h2><p>{{thread.thread_name}}</p></h2>
        <p>{{thread.body}}</p>
    </div>
    <div class='comment-section'>
        {{#each comments as |comment|}}
        <div class='comment'>
            <h4>{{user.user_name}}</h4>
            <p>{{comment.body}}</p>
        </div>
        {{/each}}
    </div>
</div>